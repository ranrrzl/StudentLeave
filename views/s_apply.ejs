<!--申请请假页面-->

<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<title>Insert title here</title>
<style type="text/css">
.center-in-center{   
            position: absolute;   
            top: 20%;   
            left: 35%;   
        }  
</style>
<%-include('link.ejs')%>
</head>
<body >
	<div class="container-fluid" >

		<%-include('s_top.ejs')%>
<div class="row" style="margin-top: 50px">

	<%-include('s_list.ejs')%>
		
		<div class="col-lg-10">
			
				<div class="card">
					
					<div class="card-body">
						<div class="alert alert-primary" role="alert">
							<h2>请假申请</h2>
						  </div>
						

						<form method="post" action="/doApply"
							enctype="multipart/form-data">
							
							
							<div class="form-group row">
								<label for="inputPassword3" class="col-sm-3 col-form-label">开始时间</label>
								<div class="col-sm-3">
									<input type="date" name="start_time" class="form-control"
										id="inputPassword3" placeholder="开始时间" value="2000-01-01">
								</div>
							</div>
							
							
							<div class="form-group row">
								<label for="inputPassword3" class="col-sm-3 col-form-label">结束年月</label>
								<div class="col-sm-3">
									<input type="date" name="end_time" class="form-control"
										id="inputPassword3" placeholder="结束时间" value="2000-01-01">
								</div>
							</div>
							
							<div class="form-group row">
								<label for="inputEmail3" class="col-sm-3 col-form-label">请假原因</label>
								<div class="col-sm-5">
									<input type="text" name="reason" class="form-control"
										id="inputEmail3" placeholder="请假原因">
								</div>
							</div>

							
							<div class="form-group row">
								<div class="col-sm-10">
									<button type="submit" class="btn btn-primary">提交</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>

	</div>

</div>
</body>
</html>
